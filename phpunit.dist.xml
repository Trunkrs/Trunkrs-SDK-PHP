<phpunit bootstrap="tests/bootstrap.php" colors="true">
    <testsuites>
        <testsuite name="Trunkrs SDK Test Suite">
            <directory suffix="Test.php">tests/SDK</directory>
        </testsuite>
        <testsuite name="Trunkrs SDK Integration Tests">
            <directory suffix="Test.php">tests/Integration</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist>
            <directory>lib</directory>
        </whitelist>
    </filter>
    <logging>
        <log type="coverage-clover" target="coverage/clover.xml"/>
    </logging>
</phpunit>